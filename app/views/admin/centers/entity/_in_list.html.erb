<div class="image">
  <%= center_image_preview(entity) %>
</div>
<div class="data">
  <div><%= admin_center_link(entity) %></div>
  <div class="info">
    <%= entity.slug %>
  </div>
  <div class="info">
    <%= entity.subway %><br/>
    <%= entity.place %>
  </div>
  <div class="secondary info">
    <%= t(:program_count, count: entity.programs_count) %>
  </div>

  <ul class="actions">
    <li><%= edit_icon edit_center_path(entity.id) %></li>
  </ul>
</div>
