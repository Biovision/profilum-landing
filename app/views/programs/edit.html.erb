<% content_for :meta_title, t('.title') %>
<% content_for :breadcrumbs do %>
    <%= link_to t('admin.programs.nav_item.text'), admin_programs_path %>
    <%= admin_program_link(@entity) %>
    <span><%= t(:edit) %></span>
<% end %>

<article class="entity-page">
  <h1><%= t('.heading') %></h1>

  <ul class="actions">
    <li><%= return_icon(admin_program_path(@entity.id)) %></li>
    <li class="danger"><%= destroy_icon @entity %></li>
  </ul>

  <%= render partial: 'form', locals: { entity: @entity } %>
</article>
