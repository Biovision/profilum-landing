<% content_for :meta_title, t('.title') %>
<% content_for :breadcrumbs do %>
    <%= link_to t('admin.schools.nav_item.text'), admin_schools_path %>
    <%= admin_school_link(@entity) %>
    <span><%= t(:edit) %></span>
<% end %>

<article>
  <h1><%= t('.heading') %></h1>

  <ul class="actions">
    <li><%= return_icon(admin_school_path(@entity.id)) %></li>
    <li class="danger"><%= destroy_icon @entity %></li>
  </ul>

  <%= render partial: 'form', locals: { entity: @entity } %>
</article>
