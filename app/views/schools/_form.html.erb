<%= render partial: 'shared/list_of_errors', locals: { entity: entity } %>

<%= form_for entity do |f| %>
    <dl>
      <dt><%= f.label :name %></dt>
      <dd>
        <%= f.text_field :name, size: nil, maxlength: School::NAME_LIMIT, required: true %>
        <div class="guideline"><%= t('.guidelines.name') %></div>
      </dd>
      
      <dt><%= f.label :slug %></dt>
      <dd>
        <%= f.text_field :slug, size: nil, maxlength: School::SLUG_LIMIT, required: true %>
        <div class="guideline"><%= t('.guidelines.slug') %></div>
      </dd>
    </dl>

    <ul class="flags">
      <li><%= f.check_box :visible %><%= f.label :visible %></li>
    </ul>

    <div class="buttons">
      <%= f.button t(:save), type: :submit %>
    </div>
<% end %>
