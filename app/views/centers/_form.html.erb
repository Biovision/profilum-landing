<%= render partial: 'shared/list_of_errors', locals: { entity: entity } %>

<%= form_for entity do |f| %>
    <dl>
      <dt><%= f.label :image %></dt>
      <dd>
        <figure class="preview" id="center-image">
          <% if entity.image.blank? %>
              <% image_path = 'biovision/base/placeholders/image.svg' %>
          <% else %>
              <% image_path = entity.image.url %>
          <% end %>
          <%= label_tag(:center_image, image_tag(image_path, alt: t('activerecord.attributes.center.image'))) %>
          <figcaption>

            <%= f.file_field :image, accept: 'image/jpeg,image/png', data: { image: 'center-image' } %>
            <div class="guideline"><%= t('.guidelines.image') %></div>
          </figcaption>
        </figure>
      </dd>

      <dt><%= f.label :name %></dt>
      <dd>
        <%= f.text_field :name, size: nil, maxlength: Center::NAME_LIMIT, required: true %>
        <div class="guideline"><%= t('.guidelines.name') %></div>
      </dd>

      <dt><%= f.label :slug %></dt>
      <dd>
        <%= f.text_field :slug, size: nil, maxlength: Center::SLUG_LIMIT, required: true %>
        <div class="guideline"><%= t('.guidelines.slug') %></div>
      </dd>

      <dt><%= f.label :url %></dt>
      <dd>
        <%= f.url_field :url, size: nil, maxlength: Center::URL_LIMIT, required: true %>
        <div class="guideline"><%= t('.guidelines.url') %></div>
      </dd>

      <dt><%= f.label :place %></dt>
      <dd>
        <%= f.text_field :place, size: nil, maxlength: Center::PLACE_LIMIT, required: true %>
        <div class="guideline"><%= t('.guidelines.place') %></div>
      </dd>

      <dt><%= f.label :latitude %></dt>
      <dd>
        <%= f.text_field :latitude, size: 20, maxlength: 50, placeholder: t('.placeholders.latitude') %>
      </dd>

      <dt><%= f.label :longitude %></dt>
      <dd>
        <%= f.text_field :longitude, size: 20, maxlength: 50, placeholder: t('.placeholders.longitude') %>
      </dd>
    </dl>

    <div class="buttons">
      <%= f.button t(:save), type: :submit %>
    </div>
<% end %>
